{
    "version": "0.2.0",
    "configurations": [
        {
            "name":".NET Core Docker Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "composeForDebug",
            "cwd": "/app",
            "program": "/app/bin/debug/netcoreapp1.0/app.dll",
            "sourceFileMap": {
                "/app": "<%- '${workspaceRoot}' %>"
            },

            "launchBrowser": {
                "enabled": true,
                "args": "<%- '${auto-detect-url}' %>",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start <%- '${auto-detect-url}' %>"
                },
                "osx": {
                    "command": "open"
                }
            },

            "pipeTransport": {
                "pipeProgram": "/bin/bash",
                "pipeArgs": [ "-c", "<%- '${workspaceRoot}' %>/dockerTask.sh startDebugging" ],
                "windows": {
                    "pipeProgram": "powershell",
                    "pipeArgs": [ "<%- '${workspaceRoot}' %>\\dockerTask.ps1", "-StartDebugging" ]
                }
            }
        }
    ]
}